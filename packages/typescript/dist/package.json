{
  "name": "@module-federation/typescript",
  "version": "3.1.4",
  "description": "Webpack plugin to stream typescript for module federation apps/components",
  "license": "MIT",
  "type": "commonjs",
  "keywords": [
    "module-federation",
    "typescript",
    "remote types",
    "federated types"
  ],
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Prasanna Mestha <prasanna@privjs.com> (https://github.com/prasannamestha)",
  "contributors": [
    "Zack Jackson <zackary.l.jackson@gmail.com> (https://github.com/ScriptedAlchemy)",
    "Pavan Divi <pavan.divi@outlook.com> (https://github.com/pavandv)"
  ],
  "scripts": {
    "build": "tsc"
  },
  "peerDependencies": {
    "next": "*",
    "react": "*",
    "react-dom": "*",
    "typescript": "*",
    "vue-tsc": "^1.0.24",
    "webpack": "^5.75.0"
  },
  "dependencies": {
    "lodash.get": "^4.4.2",
    "node-fetch": "2.7.0",
    "@module-federation/sdk": "0.6.6",
    "@module-federation/utilities": "3.1.12"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue-tsc": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "require": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "main": "./src/index.js"
}
